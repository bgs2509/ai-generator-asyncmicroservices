# PostgreSQL Data API Service - Environment Variables

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=data_postgres_api
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Server Settings
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4  # Number of uvicorn workers (production only)

# ============================================================================
# Database Settings (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/{{PROJECT_NAME}}_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=15
DATABASE_POOL_PRE_PING=true
DATABASE_ECHO=false  # Set to true to log SQL queries

# ============================================================================
# Testing Settings
# ============================================================================
TESTING=false
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/{{PROJECT_NAME}}_test_db

# ============================================================================
# CORS Settings
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ============================================================================
# Security Settings
# ============================================================================
# Add security settings if needed (API keys, JWT secrets, etc.)
# API_KEY_HEADER=X-API-Key
# API_KEY_VALUE=your-secure-api-key-here
